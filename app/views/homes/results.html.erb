<div class="search_results">
<% if @all_results.size > 0 %>

<% if @users.size != 0 %>
  <span>People</span><br><br>
  <% @users.each do |user| %>
  <%= link_to "#{user.first_name} #{user.last_name}", user_path(user) %>
  <br><br>
  <% end %>
<% end %>

<br><br><br>

<% if @companies.size != 0 %>
  <span>Companies</span><br><br>
  <% @companies.each do |company| %>
  <%= link_to company.name, company_path(company) %>
  <br><br>
  <% end %>
<% end %>

</div>

<% else %>
<div class="search_results">No results.</div>
<% end %>
